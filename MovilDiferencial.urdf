<?xml version="1.0"?>
<robot name="dif">
    <link name="base_link"> 
        <visual>
            <origin xyz="0.0 0.0 0.15" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.5 0.25 0.1"/>
            </geometry>
            <material name="gray">
            <color rgba="0.5 0.3 0.7 0.7"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.15" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="1 0.3 0.15"/>
            </geometry>
        </collision>  
    </link>

    <link name="rueda_izq">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.09" length="0.055"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.09" length="0.055"/>
            </geometry>
        </collision>
    </link>

    <link name="rueda_der">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.09" length="0.055"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 0.9"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.09" length="0.055"/>
            </geometry>
        </collision>
    </link>

    <!-- Rueda fija, no es controlada, solo manipulable por ruedas traseras con config diferencial -->
    <link name="caster_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.055"/>
            </geometry>
            <material name="white">
                <color rgba="0.9 0.9 1.0 0.9"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
    </link>


    <joint name="base_link_rueda_izq_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rueda_izq"/>
        <origin xyz="0.2 -0.125 0.1" rpy="${-pi} 0.0 0.0"/>
        <axis xyz="0.0 1 0.0"/>
    </joint>

    <joint name="base_link_rueda_der_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rueda_der"/>
        <origin xyz="0.2 0.125 0.1" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1 0.0"/>
    </joint>

    <joint name="base_link_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel"/>
        <origin xyz="-0.2 0.0 0.1" rpy="0.0 0.0 0.0"/>
    </joint>

</robot>
