<?xml version="1.0"?>
<robot name="dif">
    <link name="base_link"> 
        <visual>
            <origin xyz="0.0 0.0 0.15" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.5 0.25 0.1"/>
            </geometry>
            <material name="gray">
            <color rgba="0.5 0.3 0.7 0.7"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.15" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="1 0.3 0.15"/>
            </geometry>
        </collision>  
    </link>

    <link name="rueda_izq">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.09" length="0.055"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.09" length="0.055"/>
            </geometry>
        </collision>
    </link>

    <link name="rueda_der">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.09" length="0.055"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 0.9"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.09" length="0.055"/>
            </geometry>
        </collision>
    </link>

    <!-- Rueda fija, no es controlada, solo manipulable por ruedas traseras con config diferencial -->
    <link name="caster_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.055"/>
            </geometry>
            <material name="white">
                <color rgba="0.9 0.9 1.0 0.9"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
    </link>

    <!-- Gripper  -->

    <link name="gripper_base">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.1 0.05"/>
            </geometry>
            <material name="gray">
                <color rgba="0.5 0.5 0.5 1.0"/>
            </material>
        </visual>
    </link>

    <link name="gripper_left_finger">
        <visual>
            <origin xyz="0.0 0.05 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.02 0.1 0.02"/>
            </geometry>
            <material name="gray">
                <color rgba="0.5 0.5 0.5 1.0"/>
            </material>
        </visual>
    </link>

    <link name="gripper_right_finger">
        <visual>
            <origin xyz="0.0 -0.05 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.02 0.1 0.02"/>
            </geometry>
            <material name="gray">
                <color rgba="0.5 0.5 0.5 1.0"/>
            </material>
        </visual>
    </link>

    <joint name="base_link_gripper_base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="gripper_base"/>
        <origin xyz="0.25 0.0 0.1" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="gripper_base_left_finger_joint" type="prismatic">
        <parent link="gripper_base"/>
        <child link="gripper_left_finger"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0.0" upper="0.05" effort="1.0" velocity="0.1"/>
    </joint>

    <joint name="gripper_base_right_finger_joint" type="prismatic">
        <parent link="gripper_base"/>
        <child link="gripper_right_finger"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 -1 0"/>
        <limit lower="0.0" upper="0.05" effort="1.0" velocity="0.1"/>
    </joint>

    <!-- Joints principales -->
    <joint name="base_link_rueda_izq_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rueda_izq"/>
        <origin xyz="0.2 -0.125 0.1" rpy="${-pi} 0.0 0.0"/>
        <axis xyz="0.0 1 0.0"/>
    </joint>

    <joint name="base_link_rueda_der_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rueda_der"/>
        <origin xyz="0.2 0.125 0.1" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1 0.0"/>
    </joint>

    <joint name="base_link_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel"/>
        <origin xyz="-0.2 0.0 0.1" rpy="0.0 0.0 0.0"/>
    </joint>

</robot>
